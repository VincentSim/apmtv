<%= simple_form_for(@video) do |f| %>
  <% if @video.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>

      <ul>
      <% @video.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <iframe src="//www.youtube.com/embed/<%=@video.youtube_id%>" frameborder="0" allowfullscreen></iframe>
  <div class="form_a">
    <%= f.input :youtube_id, as: :hidden %>

    <%= f.input :title %>

    <%= f.input :description %>
    <%= f.input :expert %>
  </div>
  <div class="form_b">
    <div class="split">
      <%= f.input :category, selected:["Développement du dirigeant"], collection: Video::CATEGORY  %>
      <!-- p.select(:category, options_for_select(Presentation::FR_CATEGORY, "Business")) -->
      <%= f.input :tag, label: "Tag", selected: "Parole d'expert", collection: Video::TAG %>
      <%= f.input :date %>

    </div>
    <div class="split">
      <%= f.input :mooc_id, collection: Mooc.all  %>
      <!-- p.select(:category, options_for_select(Presentation::FR_CATEGORY, "Business")) -->
      <%= f.input :position, label: "Position", collection: Video::POSITION %>

    </div>
    <div class="actions">
      <%= f.button :submit, "Editer la vidéo",  class: 'btn-cta' %>
    </div>
  </div>
<% end %>
